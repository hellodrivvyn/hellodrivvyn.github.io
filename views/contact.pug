extends layout

block content
	.container
		form(method='post', action='contact/post')
			h1= message
			.form-group
				label First name
				input.form-control(type='text', name='first-name', placeholder='What\'s your first name?')
			.form-group
				label Last name
				input.form-control(type='text', name='last-name', placeholder='What\'s your last name?')
			.form-group
				label Email address
				input.form-control(type='email', name='email', placeholder='Email address?')
			.form-group
				label What's your favorite meal?
				textarea.form-control(name='meal', placeholder='Describe a meal ...')
			button.btn.btn-secondary(type='submit') Submit
